{
  "version": "0.1.0",
  "packageManager": "pnpm@10.30.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activadee/skill-cli.git"
  },
  "keywords": [
    "cli"
  ],
  "name": "@activadee/skill-cli",
  "type": "module",
  "author": "jrmmendes <jrmmendes@outlook.com>",
  "license": "MIT",
  "description": "Agent skills CLI with TypeScript, Commander, and Ink",
  "bin": {
    "skills": "./bin.js",
    "create-cli-app": "./bin.js"
  },
  "scripts": {
    "clear": "rimraf dist coverage",
    "test": "FORCE_COLOR=0 NODE_ENV=test vitest run --coverage",
    "test:html": "FORCE_COLOR=0 NODE_ENV=test vitest run --coverage --coverage.reporter=html --coverage.reporter=lcov --coverage.reporter=text",
    "test:html:open": "FORCE_COLOR=0 NODE_ENV=test vitest run --coverage --coverage.reporter=html --coverage.reporter=lcov --coverage.reporter=text && xdg-open ./coverage/index.html",
    "build": "node ./scripts/build.mjs",
    "dev": "tsx ./src/entrypoint.ts",
    "dev:sync": "tsx ./src/entrypoint.ts sync",
    "start": "node ./bin.js",
    "start:dev": "tsx ./src/entrypoint.ts",
    "prepublishOnly": "node ./scripts/build.mjs"
  },
  "devDependencies": {
    "@types/ink": "^2.0.3",
    "@types/ink-testing-library": "^1.0.4",
    "@types/node": "^25.3.1",
    "@types/react": "^19.2.14",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.12",
    "ink-testing-library": "^4.0.0",
    "react-devtools-core": "^7.0.1",
    "rimraf": "^6.1.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "ink": "^6.8.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.4"
  },
  "files": [
    "dist",
    "bin.js"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
